{
    "manifest_version": 3,
    "name": "Copy Text to Hyperlink",
    "version": "1.0",
    "description": "Copy selected text as a hyperlink to the clipboard.",
    "permissions": [
        "clipboardWrite",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "copy-text-to-hyperlink": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "MacCtrl+Shift+C"
            },
            "description": "Copy selected text as a hyperlink"
        }
    },
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    }
}
